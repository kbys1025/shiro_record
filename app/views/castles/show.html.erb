<% provide(:title, @castle.name) %>
<% provide(:button_text, '写真を追加') %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <% if logged_in? %>
      <% if current_user.id == @castle.user_id %>
        <section>
          <%= render 'shared/post_form' %>
        </section>
      <% end %>
    <% end %>
  </aside>
  <div class="col-md-9">
    <div class="castle-show">
      <h3>
        <%= @castle.name %>（<%= @castle.location %>）
        <% if logged_in? %>
          <% if current_user.id == @castle.user_id %>
            <%= link_to "編集", edit_user_castle_path(@user, @castle) %>
          <% end %>
        <% end %>
      </h3>
      <span class="img">
        <%= image_tag @castle.picture.url %>
      </span>
      <p><%= simple_format(@castle.comment) %></p>
    </div>
    <div class="castle-posts">
      <%= render 'shared/post_feed' %>
    </div>
  </div>
</div>
