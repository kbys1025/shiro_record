<% provide(:title, @castle.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="col-md-8">
    <div class="castle-show">
      <h3>
        <%= @castle.name %>（<%= @castle.location %>）
        <% if current_user.id == @castle.user_id %>
          <%= link_to "編集", edit_castle_path %>
        <% end %>
      </h3>
      <span class="img">
        <%= image_tag @castle.picture.url, :size => "480x320" %>
      </span>
      <p><%= simple_format(@castle.comment) %></p>
    </div>
  </div>
</div>
